#!/bin/bash

set -eu

if [ $# -ne 0 ]; then
    echo "no arguments allowed for ${0##*/}, given: $*" >&2
    exit 64
fi

bindir=$( cd "${BASH_SOURCE[0]%/*}" && pwd )
rootdir=$( cd "$bindir"/.. && pwd )

. "$bindir"/_docker.sh
. "$bindir"/_tag.sh

dockerfile=$rootdir/Dockerfile-debug

(
    "$bindir"/docker-build-base
) >/dev/null

docker_build debug "$(head_root_tag)" "$dockerfile"
